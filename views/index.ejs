<%- include('partials/header.ejs') %>

    <div class="flex flex-col justify-center items-center gap-4 mt-6 bg-slate-5">
        <div class="w-[90vw] md:w-[700px] flex justify-between bg-white">
            <a href="/create">
                <div class="flex gap-2 cursor-pointer">
                    <box-icon name='plus'></box-icon>
                    <p>Create</p>
                </div>
            </a>
            
            <div class="pl-4 flex gap-2 relative">
                <p>Filter by</p>
                <box-icon name='down-arrow' class="cursor-pointer filter-btn"></box-icon>
                <div class="absolute top-10 w-32 p-1 z-10 bg-slate-100 rounded-md shadow-sm flex flex-col gap-2 hidden filters ease-in-out">
                    <p class="cursor-pointer hover:bg-slate-200 px-3 text-slate-600 rounded-md">Newest</p>
                    <p class="cursor-pointer hover:bg-slate-200 px-3 text-slate-600 rounded-md">Oldest</p>
                </div>
            </div>
            
        </div>
        
            <% notes.forEach(note => { %>
                <a href= <%=`/show/${note.id}` %> >
                    <div class="w-[90vw] md:w-[700px] relative rounded-lg bg-white border border-slate-300 h-24 px-4 flex flex-col justify-center gap-2 cursor-pointer" name="id" value="<%= note.id  %>">
                        <div class="flex w-full justify-between items-center">
                            <h1 class="text-2xl"><%= note.title %></h1>
                            <p class="text-sm"><%= dateFormater(note.note_date)%></p>
                        </div>
                        
                        <p><%= note.body %></p>
                        <div class="hidden sm:flex absolute bottom-0 right-1">
                            <box-icon type='solid' name='edit' class="cursor-pointer"></box-icon>
                            <box-icon name='trash' class="cursor-pointer"></box-icon>
                        </div>
                    </div>
                </a>
            <% }); %>
        
    </div>

<%- include('partials/footer.ejs')  %>
