<%- include('partials/header.ejs') %>

<div class="px-5 sm:px-20 py-10 flex flex-col justify-center items-center gap-8" id="contact-section">
    <h1 class="text-2xl pl-2">Create a note</h1>
    <div class="flex justify-center items-center w-full contact-form">
        <form action="#" method="POST" class="flex flex-col gap-2 md:w-[50vw] w-full">
            <input type="text" placeholder="Title of the note" class="py-2 px-2 text-lg placeholder:italic placeholder:text-slate-400 p-1 border border-slate-300 focus:outline-none focus:text-slate-400 rounded-lg">
            <textarea name="message" id="" rows="6" placeholder="Your note here" class="py-2 px-2 text-lg placeholder:italic placeholder:text-slate-400 p-1 border border-slate-300 focus:outline-none focus:text-slate-400 rounded-lg"></textarea>
            <button type="submit" value="Envoyer" class="bg-black py-2 text-white font-semibold rounded-lg">Create</button>
        </form>
    </div>
</div>

